<div class="listings-bg-img" style="background-image: url('https://images.pexels.com/photos/175039/pexels-photo-175039.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="listings-container">
    <h1>List of Tools</h1>

    <div class="row listings-row">
      <% @listings.each do |listing| %>
      <div class="listings-card">

          <%= link_to "Rent", listing, class: "listings-card-btn" %>

        <div class="listings-card-category">
          <%= listing.category %>
        </div>
        <div class="listings-card-price">
          $<%= listing.price %>
        </div>
        <div class="listings-card-description">
        <%= listing.description %>
        </div>
        <div class="listings-card-location">
          <%= listing.user.location %>
        </div>
        <% if listing.photo.nil? %>
        <div class="listing-card-photo">
          <img src="https://images.pexels.com/photos/1409215/pexels-photo-1409215.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="">
        </div>
        <% else %>
        <div class="listing-card-photo">
        </div>
        <%= cl_image_tag listing.photo, height: 150, width: 150, crop: :fill %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
